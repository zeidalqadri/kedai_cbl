# Database
DATABASE_URL="postgresql://user:password@localhost:5432/cryptokiosk?schema=public"

# Redis (optional, for rate limiting)
REDIS_URL="redis://localhost:6379"

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="24h"

# Server
PORT=3001
NODE_ENV="development"

# CORS (comma-separated origins)
CORS_ORIGINS="http://localhost:3000,http://localhost:5173"

# Telegram Bot (for notifications - keep server-side only!)
TELEGRAM_BOT_TOKEN="your-telegram-bot-token"
TELEGRAM_CHAT_ID="your-telegram-chat-id"

# Admin credentials (only for initial setup, remove after first admin created)
INITIAL_ADMIN_USERNAME="admin"
INITIAL_ADMIN_PASSWORD="changeme123"
