# ============================================================================
# CRYPTICO ATM - ENVIRONMENT CONFIGURATION TEMPLATE
# Copy this file to .env and fill in your values
# ============================================================================

# =============================================================================
# N8N INSTANCE CONFIGURATION
# =============================================================================
# Your n8n instance base URL (for webhook URLs)
N8N_BASE_URL=https://your-n8n-instance.com

# Execution mode (queue mode recommended for production)
EXECUTIONS_MODE=queue
EXECUTIONS_PROCESS=own
EXECUTIONS_CONCURRENCY=10

# =============================================================================
# SUPABASE DATABASE
# =============================================================================
# Get these from: Supabase Dashboard > Settings > API
SUPABASE_URL=https://xxxxxxxxxxxx.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# =============================================================================
# TELEGRAM BOT
# =============================================================================
# Create bot via @BotFather on Telegram
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Get chat ID via @userinfobot on Telegram
# This is where new order notifications will be sent
TELEGRAM_CHAT_ID=123456789

# Admin chat ID (can be same as above, or different for error alerts)
TELEGRAM_ADMIN_CHAT_ID=123456789

# =============================================================================
# API SECURITY
# =============================================================================
# Secret key for frontend API requests (generate a strong random string)
# Example: openssl rand -hex 32
API_SECRET_KEY=cryptico_sk_live_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Admin API key for dashboard access (generate a strong random string)
# Example: openssl rand -hex 32
ADMIN_API_KEY=admin_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Webhook verification secret (optional, for additional security)
WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# BUSINESS CONFIGURATION
# =============================================================================
# Business name displayed in notifications
BUSINESS_NAME=CryptoKiosk

# Rate markup percentage (e.g., 2 = 2% above market rate)
RATE_MARKUP_PERCENT=2

# Rate lock duration in seconds (5 minutes = 300)
RATE_LOCK_DURATION_SECONDS=300

# Transaction limits in MYR
MIN_AMOUNT_MYR=50
MAX_AMOUNT_MYR=10000

# =============================================================================
# NETWORK FEES (MYR)
# =============================================================================
# These are your operational costs per network - adjust as needed
FEE_TRC20=1.00
FEE_BEP20=2.50
FEE_ERC20=15.00
FEE_POLYGON=0.50

# =============================================================================
# EXTERNAL APIs
# =============================================================================
# CoinGecko API (free tier)
COINGECKO_API_URL=https://api.coingecko.com/api/v3

# Optional: CoinGecko Pro API key for higher rate limits
# COINGECKO_API_KEY=

# =============================================================================
# IDEMPOTENCY
# =============================================================================
# Salt for generating idempotency keys (keep this secret and consistent)
IDEMPOTENCY_SALT=cryptico_idem_xxxxxxxxxxxxxxxxxxxx

# =============================================================================
# LOGGING & MONITORING (OPTIONAL)
# =============================================================================
# Error notification email (if you want email alerts too)
# ERROR_NOTIFICATION_EMAIL=ops@yourcompany.com

# Metrics endpoint (for Prometheus/Grafana integration)
# METRICS_ENDPOINT=https://your-metrics-server.com/push

# =============================================================================
# MULTI-KIOSK CONFIGURATION (OPTIONAL)
# =============================================================================
# Default kiosk ID (if not specified in requests)
DEFAULT_KIOSK_ID=default

# =============================================================================
# RATE LIMITING
# =============================================================================
# Max orders per minute per IP (optional DDoS protection)
# RATE_LIMIT_ORDERS_PER_MIN=10

# Max lookup requests per minute per IP
# RATE_LIMIT_LOOKUPS_PER_MIN=30

# =============================================================================
# FRONTEND CONFIGURATION (for React app .env)
# =============================================================================
# Copy these to your React app's .env file:
# REACT_APP_API_URL=https://your-n8n.com/webhook
# REACT_APP_API_KEY=cryptico_sk_live_xxxxxxxxxxxxxxxxxxxxxxxxxxxx
# REACT_APP_ADMIN_KEY=admin_xxxxxxxxxxxxxxxxxxxxxxxxxxxx
# REACT_APP_SUPABASE_URL=https://xxxxxxxxxxxx.supabase.co
