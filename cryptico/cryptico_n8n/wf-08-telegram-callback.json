      "parameters": {
        "operation": "executeQuery",
        "query": "=INSERT INTO audit_log (entity_type, entity_id, action, old_status, new_status, details, created_at) VALUES ('order', '{{ $('15-validate-transition').first().json.orderId }}', '{{ $('15-validate-transition').first().json.action }}', '{{ $('15-validate-transition').first().json.previousStatus }}', '{{ $('15-validate-transition').first().json.newStatus }}', '{{ JSON.stringify({ via: 'telegram', user: $('15-validate-transition').first().json.fromUser }) }}', '{{ new Date().toISOString() }}')",
