# CryptoKiosk Environment Variables
# Copy this file to .env and fill in your values

# Telegram Bot Configuration
# Get from @BotFather on Telegram
VITE_TELEGRAM_BOT_TOKEN=your_bot_token_here
VITE_TELEGRAM_CHAT_ID=your_chat_id_here

# Business Configuration
VITE_BUSINESS_NAME=CryptoKiosk
VITE_BUSINESS_TAGLINE=Buy crypto instantly with DuitNow
VITE_SUPPORT_TELEGRAM=@cryptokiosk_support
VITE_SUPPORT_EMAIL=support@cryptokiosk.my

# DuitNow QR Code (URL or base64)
VITE_DUITNOW_QR_IMAGE=

# Transaction Limits (MYR)
VITE_MIN_AMOUNT=50
VITE_MAX_AMOUNT=10000

# Rate Configuration
VITE_RATE_MARKUP=0.02
VITE_RATE_LOCK_DURATION=300

# Admin Configuration
# WARNING: In production, use proper authentication backend
VITE_ADMIN_PASSWORD=change_this_password
